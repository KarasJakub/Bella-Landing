---
import ApproveBlackIcon from "assets/AdvantagesIcons/ApproveBlack.svg"
import ApproveRedIcon from "assets/AdvantagesIcons/ApproveRed.svg"
const { title, description, image } = Astro.props;
---

<div class="w-full md:max-w-3xl bg-[#fff] p-8 pr-20 rounded-xl flex justify-center items-center h-96 overflow-hidden">
    <img src={image} alt="" class=" max-h-16 mr-12">
    <div class="flex flex-col justify-center items-center gap-8">
        <h4 class="font-detail font-extrabold text-4xl self-start">{title}</h4>
        <p class="font-detail font-normal text-3xl">{description}</p>
    </div>
</div>